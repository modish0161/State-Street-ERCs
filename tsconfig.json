{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "hardhat", "concat-stream", "form-data", "glob", "minimatch"]  // Ensure these are included
  },
  "include": [
    "scripts",
    "test",
    "typechain",
    "**/*.ts",
    "**/*.json"
  ]
}